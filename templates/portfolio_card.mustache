<div class="card border border-radius profile-card-4 text-center shadow-none">
    <div class="ribbon">{{layout}}</div>
    {{#hasnews}}<div class="ribbon ribbon-2 bg-pulse-gold"><i class="fa fa-star"></i> NEWS</div>{{/hasnews}}
    <img src="{{config.wwwroot}}/mod/portfoliogroup/pix/layouts/{{layout}}/index.png" class="img img-responsive" alt="{{fullname}}">
    <div class="card-body py-4">
        <h3>{{name}}</h3>

        <div class="d-flex justify-content-center">
            {{#members}}
                <img class="w-48 userpicture" src="{{userpicture}}" alt="{{fullname}}" title="{{fullname}}" data-toggle="tooltip">
            {{/members}}
        </div>

        <hr>

        {{#grade}}
            <div class="text-left">
                <div class="badge badge-success">
                    {{#str}}assessment, mod_portfoliogroup{{/str}}: {{.}}
                </div>
            </div>
        {{/grade}}
        {{#lastentry}}
            <div class="last-entry">
                <div>
                    <span class="badge badge-secondary">Last entry</span>
                </div>
                <p class="mb-0">{{title}}</p>
                <span class="text-muted"><i class="far fa-clock" aria-hidden="true"></i>{{humantimecreated}}</span>
            </div>
        {{/lastentry}}
        {{^lastentry}}
            <span class="badge badge-danger">Empty portfolio</span>
        {{/lastentry}}
    </div>
    <div class="card-footer">
        <a href="{{config.wwwroot}}/mod/portfoliogroup/portfolio.php?id={{config.courseId}}&g={{id}}">{{#str}}viewportfolio, mod_portfoliogroup{{/str}}</a>
    </div>
    <div class="card-footer">
        <div class="d-flex flex-row">
            <div class="flex-fill">
                <p class="mb-0"><i class="fa fa-list-ol"></i> Entries</p>
                <p class="mb-0">{{totalentries}}</p>
            </div>
            <div class="flex-fill">
                <p class="mb-0"><i class="fa fa-thumbs-o-up"></i> Likes</p>
                <p class="mb-0">{{totallikes}}</p>
            </div>
            <div class="flex-fill">
                <p class="mb-0"><i class="fa fa-comment-o"></i> Comments</p>
                <p class="mb-0">{{totalcomments}}</p>
            </div>
        </div>
    </div>
</div>