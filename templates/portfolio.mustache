{{#isloggedin}}
    <div class="mb-3 d-flex">
        <div class="backbutton">
            <a class="btn btn-primary"
               href="{{config.wwwroot}}/mod/portfoliogroup/index.php?id={{courseid}}">
            <i class="fa fa-angle-left"></i> Back to portfolios
            </a>
        </div>

        <div class="usergradeinfo ml-auto">
            {{#cangrade}}
                {{#grade}}
                    <span class="badge badge-success">{{#str}}assessment, mod_portfoliogroup{{/str}}: {{{grade}}}</span>
                {{/grade}}
                {{^grade}}
                    <button class="btn btn-danger grade-portfolio" data-courseid="{{courseid}}" data-groupid="{{groupid}}">
                        <i class="fa fa-pencil-square-o"></i>
                        {{#str}}addgrade, mod_portfoliogroup{{/str}}
                    </button>
                {{/grade}}
            {{/cangrade}}
        </div>
    </div>
{{/isloggedin}}

<div class="portfolio-header p-2 rounded border">
    <div class="user-info ml-2">
        <h2>{{groupname}}</h2>
        {{#groupsmembers}}
            <div class="groupmember">
                <a href="{{config.wwwroot}}/local/evokegame/profile.php?id={{courseid}}&userid={{id}}">
                <img src="{{userpicture}}" alt="{{fullname}}"> {{fullname}}
                </a>
            </div>
        {{/groupsmembers}}
        <hr>
        <h3>Hello, this is our portfolio!</h3>
    </div>
</div>

{{#hasentries}}
    {{{entries}}}
{{/hasentries}}
{{^hasentries}}
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">Portfolio empty!</h4>
        <hr>
        <p class="mb-0">There are no entries for this portfolio yet, please back later.</p>
    </div>
{{/hasentries}}

{{#js}}
    require(['jquery'], function($) {
        $('.carousel').carousel({
            interval: 5000,
            pause: 'hover'
        });
    });
{{/js}}

{{#isloggedin}}
    {{#js}}
        require([
            'jquery',
            'mod_portfoliogroup/sweetalert',
            'mod_portfoliogroup/togglelike',
            'mod_portfoliogroup/tribute_init',
            'mod_portfoliogroup/comment/add',
            'mod_portfoliogroup/comment/edit',
            'mod_portfoliogroup/addgrade'
        ], function($, Swal, ToggleLike, TributeInit, AddComment, EditComment, AddGrade) {
            TributeInit.init();

            AddComment.init();

            EditComment.init({{{contextid}}});

            AddGrade.init({{{contextid}}});

            ToggleLike.init();
        });
    {{/js}}
{{/isloggedin}}